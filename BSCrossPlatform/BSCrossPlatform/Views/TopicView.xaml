<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSCrossPlatform.Views.TopicView"
             BackgroundImage ="background.jpg">
  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="100"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <StackLayout Orientation="Horizontal" Grid.Row="0">
        <Label Text= "{Binding TopicName}" HorizontalTextAlignment="Start" FontSize="20" 
               VerticalTextAlignment="Center" TextColor="Green" LineBreakMode="WordWrap"/>
      </StackLayout>
      <StackLayout Grid.Row="1">
          <WebView x:Name="webView" 
                   Source="{Binding NotesHtmlWebViewSource}"
                   HeightRequest="1000"
                   WidthRequest="1000"/>    
      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>