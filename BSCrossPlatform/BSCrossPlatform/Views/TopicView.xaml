<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSCrossPlatform.Views.TopicView">
  <ContentPage.Content >
    <Grid BackgroundColor="White">
      <Grid.RowDefinitions>
        <RowDefinition Height="100"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <StackLayout Orientation="Horizontal" Grid.Row="0">
        <Label Text= "{Binding TopicName}" HorizontalTextAlignment="Start" FontSize="30" 
               VerticalTextAlignment="Center" TextColor="Aqua"/>
      </StackLayout>
      <StackLayout Grid.Row="1">
          <ListView RowHeight ="80"
                ItemsSource ="{Binding TopicFiles}"
                ItemTapped ="Handle_ItemTapped"
                ItemSelected ="Handle_ItemSelected"
      >
            <ListView.ItemTemplate>
              <DataTemplate>
                <ImageCell ImageSource="pdf.gif" Text="{ Binding FileName }" TextColor="Black"/>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
      </StackLayout>
      <StackLayout Grid.Row="2">
        <!--<DataTemplate>-->
          <WebView x:Name="webView" HeightRequest="1000" WidthRequest="1000" Navigated="webviewNavigated" Navigating="webviewNavigating" />         
        <!--</DataTemplate>-->
      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>