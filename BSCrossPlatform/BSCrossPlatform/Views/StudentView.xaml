<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSCrossPlatform.Views.StudentView">

  <ContentPage.Content >
    <Grid BackgroundColor="White">
      <Grid.RowDefinitions>
        <RowDefinition Height="100"/>
      <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <StackLayout Orientation="Horizontal" Grid.Row="0">
        <Image Source="{Binding SchoolBadge}" />
        <Label Text= "{Binding SchoolName}" HorizontalTextAlignment="Start" 
               FontSize="30" VerticalTextAlignment="Center" TextColor="Aqua"/>
      </StackLayout>
    <StackLayout Grid.Row="1">
      <ListView RowHeight ="80"
              ItemsSource ="{Binding StudentContent}"
              ItemTapped ="Handle_ItemTapped"
              ItemSelected ="Handle_ItemSelected"     
      >
      <ListView.ItemTemplate>
        <DataTemplate>                       
         <ImageCell ImageSource="{Binding ModuleImage}" Text="{Binding Module}" TextColor="Black"/>        
        </DataTemplate>   
      </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
    </Grid>    
  </ContentPage.Content> 
</ContentPage>