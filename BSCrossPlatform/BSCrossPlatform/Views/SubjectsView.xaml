<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSCrossPlatform.Views.SubjectsView"
             BackgroundImage ="background.jpg">

  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="100"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <StackLayout Orientation="Horizontal" Grid.Row="0">
        <Image Source="units.png" />
        <Label Text= "Subjects / Units" HorizontalTextAlignment="Start" 
               FontSize="30" VerticalTextAlignment="Center" TextColor="Green"/>
      </StackLayout>
      <StackLayout Grid.Row="1">
        <ListView RowHeight ="80"
                ItemsSource ="{Binding CourseList}"
                ItemTapped ="Handle_ItemTapped"
                ItemSelected ="Handle_ItemSelected"
      >
          <ListView.ItemTemplate>
            <DataTemplate>
              <ImageCell ImageSource="course.png" Text="{Binding name}" TextColor="Black"/>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </StackLayout>
    </Grid>
  </ContentPage.Content> 
</ContentPage>